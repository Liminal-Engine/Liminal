{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
          "name": "Debug Liminal Engine",
          "type": "cppdbg",
          "request": "launch",
          "args": [],
          "stopAtEntry": false,
          "internalConsoleOptions": "neverOpen",
          "externalConsole": false,
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/build/Liminal",
            "MIMode": "gdb",
            "miDebuggerPath": "gdb",
            "setupCommands": [
              {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
              }
            ],
        },
      {
        "name": "Debug Tests throught ctest command",
        "type": "cppdbg",
        "request": "launch",
        "args": [
          "-R",
          "WhenGivenPathOfObjectNotContainingComplexValues/LiminalJsonIoObjectHasComplexValueMethod.ReturnGivenBool",
          "--output-on-failure"
        ],
        "stopAtEntry": false,
        "internalConsoleOptions": "neverOpen",
        "externalConsole": false,
        "cwd": "${workspaceFolder}/build/tests",
        "program": "/usr/bin/ctest",
        "MIMode": "gdb",
        "miDebuggerPath": "gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          },
          {
            "text": "set follow-fork-mode child",
            "ignoreFailures": true
          }
        ]
      }
    ]
}