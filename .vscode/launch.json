    "version": "0.2.0",
    "configurations": [
        {
          "name": "Debug Liminal Engine",
          "type": "cppdbg",
          "request": "launch",
          "args": [],
          "stopAtEntry": false,
          "internalConsoleOptions": "neverOpen",
          "externalConsole": false,
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/build/Liminal",
            "MIMode": "gdb",
            "miDebuggerPath": "gdb",
            "setupCommands": [
              {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
              }
            ],
        },
        {
          "name": "Debug Tests",
          "type": "cppdbg",
          "request": "launch",
          "args": [],
          "stopAtEntry": false,
          "internalConsoleOptions": "neverOpen",
          "externalConsole": false,
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/build/tests/LiminalUnitTests",
            "MIMode": "gdb",
            "miDebuggerPath": "gdb",
            "setupCommands": [
              {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
              }
            ],
          }
    ]
}